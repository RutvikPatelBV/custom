<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
   <t t-name="custom_pos_partner_list.sundry_customer"
      t-inherit="point_of_sale.PartnerListScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-search-bar')]" position="after">
          <button  class="button new-customer highlight btn btn-lg btn-primary" role="img" aria-label="set sundry customer"
                        title="Set Sundry Customer" t-on-click="setSundryCustomer">
                    <i t-if="ui.isSmall" class="fa fa-plus"/>
                    <t t-else=""> Set Sundry Customer</t>
          </button>
       </xpath>
   </t>
</templates>